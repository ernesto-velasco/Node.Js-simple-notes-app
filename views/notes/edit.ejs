<div class="justify-center items-center">
    <form class="w-full max-w-lg mx-auto my-5" action="/notes/update" method="POST">
        <input type="hidden" name="title" value="<%= title %>">
        <h1 class="text-gray-900 dark:text-white">
        </h1>
        <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2 dark:text-white" for="grid-first-name">
            Title
            </label>
            <input
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white"
            id="grid-first-name" type="text" placeholder="Note Title" name="new_title" value="<%= note.title  %>" required>
        </div>
        <div class="w-full md:w-1/2 px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2 dark:text-white" for="grid-last-name">
            Body
            </label>
            <input
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white"
            id="grid-last-name" type="text" placeholder="Note Body" name="new_body" value="<%= note.body  %>" required>
        </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6 px-3 ">
        <button class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold rounded py-2 px-4" type="submit">
            Save changes
        </button>
        </div>
    </form>
    </div>