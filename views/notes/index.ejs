<div class="container mt-4 mx-auto">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        <% notes.forEach((note)=> { %>
            <div
                class="card m-2 cursor-pointer border border-gray-400 rounded-lg hover:shadow-md hover:border-opacity-0 transform hover:-translate-y-1 transition-all duration-200 dark:bg-gray-900 dark:border-transparent">
                <div class="m-3 mb-4 pb-4 relative">
                    <h2 class="text-lg mb-2 dark:text-gray-400 truncate">
                        <%= note.title %>
                    </h2>
                    <p
                        class="font-light font-mono text-sm truncate text-gray-700 dark:text-gray-300 hover:text-gray-900 transition-all duration-200">
                        <%= note.body %>
                    </p>
                </div>
                <div class="absolute bottom-0 right-0 flex ">
                    <div class=" dark:text-gray-400">
                        <form action="/notes/<%= note.title %>" method="GET">
                            <button type="submit">
                                <span
                                    class="hover:text-blue-400 text-sm text-teal-800 font-mono bg-teal-100 inline rounded-full px-2 align-top float-right animate-pulse">show</span>
                            </button>
                        </form>
                    </div>
                    <div class=" dark:text-gray-400">
                        <form action="/notes/<%= note.title %>/edit" method="GET">
                            <button type="submit">
                                <span
                                    class="hover:text-yellow-400 text-sm text-teal-800 font-mono bg-teal-100 inline rounded-full px-2 align-top float-right animate-pulse">edit</span>
                            </button>
                        </form>
                    </div>
                    <div class="dark:text-gray-400 ">
                        <form action="/notes/<%= note.title %>/delete" method="POST">
                            <button type="submit">
                                <span
                                    class="hover:text-red-400 text-sm text-teal-800 font-mono bg-teal-100 inline rounded-full px-2 align-top float-right animate-pulse">X</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <% }) %>

    </div>
</div>